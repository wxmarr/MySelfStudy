<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="gl.com.activity.RoundActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角"
        android:textSize="35sp"
        android:layout_gravity="center_horizontal"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/RoundImage_one"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        fresco:roundAsCircle="false"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="false"
        fresco:roundTopRight="false"
        fresco:roundWithOverlayColor="#bbab14"
        fresco:roundingBorderWidth="5px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆形"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"

        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/RoundImage_two"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="#fbf122"
        fresco:roundingBorderWidth="5px"
        />

</LinearLayout>
